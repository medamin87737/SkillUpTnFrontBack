pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
    }

    stages {

        stage('Checkout') {
            steps {
                echo "ğŸ”„ CI BACK â€“ Checkout du repository..."
                deleteDir()
                git branch: 'main', url: 'https://github.com/medamin87737/SkillUpTnFrontBack.git'
            }
        }

        stage('SonarQube Analysis (Backend)') {
            steps {
                echo "ğŸ” Analyse SonarQube du backend..."
                withSonarQubeEnv('SonarQube') {
                    script {
                        def scannerHome = tool 'SonarScanner'
                        sh """
                          "${scannerHome}/bin/sonar-scanner" \
                            -Dsonar.projectKey=SkillUpTN-Backend \
                            -Dsonar.projectName=SkillUpTN-Backend \
                            -Dsonar.sources=backend
                        """
                    }
                }
            }
        }

        stage('Build Docker Image (Backend)') {
            steps {
                echo "ğŸ›  Build de l'image Docker du backend (CI)..."
                sh 'docker-compose build backend'
            }
        }

        stage('Run Backend Tests') {
            steps {
                echo "ğŸ§ª Lancement des tests backend dans le conteneur..."
                sh 'docker-compose run --rm backend npm run test'
            }
        }
    }

    post {
        success { echo "âœ… CI BACK terminÃ© avec succÃ¨s" }
        failure { echo "âŒ CI BACK Ã©chouÃ©" }
    }
}

