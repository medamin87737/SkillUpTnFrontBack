pipeline {
    agent any

    options {
        // On g√®re nous‚Äëm√™mes le checkout
        skipDefaultCheckout(true)
    }

    stages {

        stage('Checkout') {
            steps {
                echo "üîÑ CI FRONT ‚Äì Checkout du repository..."
                deleteDir()
                git branch: 'main', url: 'https://github.com/medamin87737/SkillUpTnFrontBack.git'
            }
        }

        stage('SonarQube Analysis (Frontend)') {
            steps {
                echo "üîç Analyse SonarQube du frontend..."
                withSonarQubeEnv('SonarQube') {
                    script {
                        def scannerHome = tool 'SonarScanner'
                        sh """
                          "${scannerHome}/bin/sonar-scanner" \
                            -Dsonar.projectKey=SkillUpTN-Frontend \
                            -Dsonar.projectName=SkillUpTN-Frontend \
                            -Dsonar.sources=frontend
                        """
                    }
                }
            }
        }

        stage('Build Docker Image (Frontend)') {
            steps {
                echo "üõ† Build de l'image Docker du frontend (CI)..."
                sh 'docker-compose build frontend'
            }
        }
    }

    post {
        success { echo "‚úÖ CI FRONT termin√© avec succ√®s" }
        failure { echo "‚ùå CI FRONT √©chou√©" }
    }
}

