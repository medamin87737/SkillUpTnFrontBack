pipeline {
    agent any

    options {
        skipDefaultCheckout(true)
    }

    stages {

        stage('Checkout') {
            steps {
                echo "üîÑ CD BACK ‚Äì Checkout du repository..."
                deleteDir()
                git branch: 'main', url: 'https://github.com/medamin87737/SkillUpTnFrontBack.git'
            }
        }

        stage('Build Docker Image (Backend)') {
            steps {
                echo "üõ† Build de l'image Docker du backend (CD)..."
                sh 'docker-compose build backend'
            }
        }

        stage('Deploy Backend + Mongo') {
            steps {
                echo "üöÄ D√©ploiement du backend (et d√©marrage de Mongo si besoin)..."
                script {
                    // √âvite les conflits de nom de conteneur si un ancien Mongo/backend existe d√©j√†
                    sh 'docker stop skillup-mongo || true'
                    sh 'docker rm skillup-mongo || true'
                    sh 'docker stop skillup-backend || true'
                    sh 'docker rm skillup-backend || true'

                    // On s'assure que Mongo est lanc√© puis on (re)d√©ploie le backend
                    sh 'docker-compose up -d mongo'
                    sh 'docker-compose up -d --force-recreate backend'
                }
            }
        }
    }

    post {
        success { echo "‚úÖ CD BACK d√©ploy√© avec succ√®s" }
        failure { echo "‚ùå CD BACK √©chou√©" }
    }
}

